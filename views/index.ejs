      Continue with Discord
    </button>
  </div>
  
  <div id="contentContainer">
    <!-- سيتم إدراج محتوى الحساب هنا بعد تسجيل الدخول -->
  </div>

  <script src="assets/js/log.js"></script>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // تحقق إذا كان هناك كوكيز (على سبيل المثال، تحقق من كوكيز `id` أو أي كوكيز أخرى)
      const userId = getCookie('id'); // أو أي كوكيز تريد التحقق منها
  
      if (userId) {
        // إذا كانت الكوكيز موجودة، قم بتحويل المستخدم إلى /shop
        window.location.href = '/shop';
      }
  
      document.getElementById('loginLink').addEventListener('click', function(event) {
        event.preventDefault();
  
        const isLogin = document.getElementById('formTitle').textContent === 'Login';
  
        // Toggle between Login and Sign Up
        if (isLogin) {
          // تحويل إلى "Sign Up"
          document.getElementById('formTitle').textContent = 'Sign Up';
          document.getElementById('usernameBox').style.display = 'block';
          document.getElementById('submitButton').textContent = 'Create Account';
          document.getElementById('loginLink').textContent = 'Login';
        } else {
          // تحويل إلى "Login"
          document.getElementById('formTitle').textContent = 'Login';
          document.getElementById('usernameBox').style.display = 'none';
          document.getElementById('submitButton').textContent = 'Login';
          document.getElementById('loginLink').textContent = 'Sign Up';
        }
      });
    });
  
    function getCookie(name) {
      const nameEQ = name + "=";
      const ca = document.cookie.split(';');
      for (let i = 0; i < ca.length; i++) {
        let c = ca[i].trim();
        if (c.indexOf(nameEQ) === 0) {
          return c.substring(nameEQ.length, c.length);
        }
      }
      return null;
    }
  </script>  
</body>
</html>
